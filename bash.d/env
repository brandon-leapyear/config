#!/bin/bash

# java
export JDK_DIR=$(/usr/libexec/java_home)
export JAVA_HOME=$JDK_DIR

function _add_to_path() {
    export PATH="$PATH:$1"
}

function _prepend_to_path() {
    export PATH="$1:$PATH"
}

# my custom scripts
_add_to_path ~/.bin

# stack
_add_to_path ~/.local/bin

# spark
export SPARK_HOME=/usr/local/lib/spark-2.1.1-bin-hadoop2.7
_add_to_path $SPARK_HOME/bin

export EDITOR=vim

# ls
export CLICOLOR=xterm-color
export LSCOLORS=exgxcxdxcxegedabagacad

# aws
if [[ -f ~/.aws/credentials ]]; then
    $(export_aws)
fi
